<UserControl x:Class="ToscaAssistant.Pages.SubPages.Files"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <!-- TODO: set @SelectedSource -->
        <mui:ModernTab Layout="List">
            <mui:ModernTab.Links>
                <!-- TODO: set @Source -->
                <mui:Link DisplayName="Image Compare" />
                <mui:Link DisplayName="File Existence" />
                <mui:Link DisplayName="File Compare" />
                <mui:Link DisplayName="Delete File" />
                <mui:Link DisplayName="Copy File" />
                <mui:Link DisplayName="Save Content to File" />
                <mui:Link DisplayName="Open File Resource" />
                <mui:Link DisplayName="Save File Resource" />
                <mui:Link DisplayName="Open File" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
